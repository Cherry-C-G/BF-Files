    @using UserLoginApp.Models
    @model Account

    @{
    ViewData["Title"] = "Edit";
}

    <h2>Edit Account</h2>
    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="Id" />
        <div>
            <label for="UserName">User Name</label>
            <input type="text" id="UserName" name="UserName" asp-for="UserName" required />
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email" asp-for="Email" required />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label for="Password">Password</label>
            <input type="password" id="Password" name="Password" asp-for="Password" required />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <button type="submit">Save</button>
            <a asp-controller ="Account" asp-action="Index">Cancel</a>
        </div>
    </form>
