@using CourseDaoApplication.Data
@model IEnumerable<Course>



@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Professor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.Professor.FirstName</td>
                <td>@course.Professor.LastName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseId">Edit</a> 
                    <a asp-action="Details" asp-route-id="@course.CourseId">Details</a> 
                    <a asp-action="Delete" asp-route-id="@course.CourseId" data-confirm="Are you sure you want to delete this course?">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New</a>
