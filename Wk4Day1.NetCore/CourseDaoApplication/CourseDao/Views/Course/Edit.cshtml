@using CourseDaoApplication.Data
@model Course

@if (ViewBag.IsEdit==true)
{
    <div class="container">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Course Updated Successfully. Go to <a asp-action="Index" asp-controller="Course" >Course Home Page</a> </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<h2>Edit</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CourseId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProfessorId" class="control-label"></label>
        <input asp-for="ProfessorId" class="form-control" />
        <span asp-validation-for="ProfessorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
