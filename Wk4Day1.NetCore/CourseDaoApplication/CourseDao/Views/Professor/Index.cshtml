@using CourseDaoApplication.Data
@model IEnumerable<Professor>

@{
    ViewData["Title"] = "Professors";
}

<h2>Professors</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Office</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var professor in Model)
        {
            <tr>
                <td>@professor.FirstName</td>
                <td>@professor.LastName</td>
                <td>@professor.Email</td>
                <td>@professor.Office</td>
                <td>@professor.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@professor.ProfessorId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@professor.ProfessorId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@professor.ProfessorId" data-confirm="Are you sure you want to delete this professor?">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New</a>

